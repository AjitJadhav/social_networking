<%= render 'home/header1' %>
</br></br></br></br>
<p id="notice"><%= notice %></p>
<h2>People you may know.</h2>

<table class='table table-striped'>
  <tr>
    <th>id  </th>
    <th>Name</th>
    <th>Date of birth</th>
    <th>Email</th>
    <th></th>

  </tr>

  <% @users.each do |user| %>
    
    <% if is_not_requested?(user) %>
      <%= form_for @current_user,:url => add_friend_path(:friend_id => user.id) do |f| %>
        <tr>
          <td><%= user.id %> </td>
          <td><%= user.name %></td>
          <td><%= user.date_of_birth %></td>
          <td><%= user.email %></td>
          <td>
            <div class="actions">
            <%= f.submit value="Add Friend" %>
            </div>
          </td>
        </tr>
      <% end %>
    <% end %>    
  <% end %>
</table>

