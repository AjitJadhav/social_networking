<p id="notice"> <%= notice %> </p> 

<p>Sign In</p>
<%= form_for 'user', :as => :user, :url => authenticate_login_index_path do |f| %>
  <p>
    username or email: <br />
    <%= f.text_field :email %>
  </p>
  <p>
    password:<br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Sign In' %>&nbsp;&nbsp;&nbsp;
  </p>
<% end %>

<%= link_to 'Sign up', new_user_path %>

