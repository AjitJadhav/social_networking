<body>
  <% if user_signed_in? %>
    
    </br></br></br></br>
    
    <%= render partial: 'flash', :locals => { flash: flash } %>
      
    <%= render 'header'%>
    
    <%= render 'form' %>
    
    <div class="container">
      <div class='row-fluid'>  
        <div class="span6 pull-right">
          <%= label_tag(:search) %> <br/ >
          <%= text_field_tag(:search,'',size: 20, placeholder: 'Search posts....', :id => 'keyword') %>
          
          <li><%= select_tag :posts, options_for_select([["All", 0], ["Only Status", 1], ["Only Pics", 2]]) %>
          <button id='search' > Go </button>
        </div>
      </div>  
    </div>  
    
    
    
    <div id="search_post">
      <%= render partial: 'posts/post' %>
    </div>
    
    <%= render 'footer' %>
    
  <% end %>
</body>

<script type="text/javascript" charset="UTF-8">
  $(document).on("click", "#search", function(){
   var search_keyword = $("#select_posts").val();
   $.ajax({
     url: "/search_post/"+search_keyword, type: "POST"
   });
  });
</script>
