<body>
  <% if user_signed_in? %>
    
    </br></br></br></br>
    
    <%= render partial: 'flash', :locals => { flash: flash } %>
      
    <%= render 'header'%>
    
    <%= render 'form' %>
    
    <div class="container">
      <div class='row-fluid'>  
        <div class="span6 pull-right">
          <%= label_tag(:search_posts_status_or_images) %> <br/ >          
          <%= select_tag :posts, options_for_select([["All", 0], ["Only Status", 1], ["Only Pics", 2]]), :id => "search_posts" %>
          <button id='search' > Go </button>
        </div>
      </div>  
    </div>  
    
    
    
    <div id="search_post">
      <%= render partial: 'posts/post' %>
    </div>
    
    <%= render 'footer' %>
    
  <% end %>
</body>

<script type="text/javascript" charset="UTF-8">
  $(document).on("click", "#search", function(){
    var id = $("#search_posts").val();
    $.ajax({
      url: "/home/"+id+"/search", type: "POST"
    });
  });
</script>
